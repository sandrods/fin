<%= page_header "Exibir Forma" do %>
  <%= link_to icon(:chevron_left, "Voltar"), formas_path, class: 'btn' %>
  <%= link_to icon(:edit, 'Editar Forma'), edit_forma_path(@forma), class: 'btn btn-sm btn-primary' %>
<% end %>

<div class="panel panel-default">
  <div class="panel-body">

    <h4 class="text-primary">
      <%= @forma.nome %>
    </h4>

    <div class="row">

      <div class="col-md-4 col-sm-6">

        <dl class="dl-horizontal form">

          <dt>Nome</dt>
          <dd><%= @forma.nome %></dd>

        </dl>

      </div>

    </div>

  </div>
</div>