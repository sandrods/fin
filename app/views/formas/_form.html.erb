<%= simple_form_for(@forma) do |f| %>

  <div class="row">
    <div class="col-md-6">
      <%= f.input :nome, label: 'Nome' %>
    </div>
    <div class="col-sm-6">
      <%= f.association :conta, label: 'Conta Preferncial', collection: Conta.all, label_method: :nome %>
    </div>
  </div>

  <div class="bottom-actions">
    <%= f.button :submit, 'Salvar Forma', class: 'btn btn-primary' %>

    <%= link_to icon(:trash, 'Apagar este Forma'),
                  @forma,
                  method: :delete,
                  data: { confirm: 'Tem certeza?' },
                  class: 'btn btn-sm text-danger pull-right' unless @forma.new_record? %>
  </div>
<% end %>
