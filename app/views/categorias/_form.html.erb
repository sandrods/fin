<%= simple_form_for(@categoria) do |f| %>

  <div class="row">
    <div class="col-md-6">
      <%= f.input :nome, label: 'Nome' %>
      <%= f.input :cd, label: false, as: :boolean, checked_value: 'C', unchecked_value: 'D' %>
    </div>
  </div>

  <div class="bottom-actions">
    <%= f.button :submit, 'Salvar Categoria', class: 'btn btn-primary' %>

    <%= link_to icon(:trash, 'Apagar esta Categoria'),
          @categoria,
          method: :delete,
          data: { confirm: 'Tem certeza?' },
          class: 'btn btn-sm text-danger pull-right' unless @categoria.new_record? %>
  </div>

<% end %>
