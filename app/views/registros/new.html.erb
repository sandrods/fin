
<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
  <h4 class="modal-title">
    Incluir Registro
    <%= label_cd(@registro.cd) %>
  </h4>

</div>
<%= simple_form_for @registro, remote: false do |f| %>
  <%= f.input :cd, as: :hidden %>
  <div class="modal-body">

    <%= f.input :descricao, label: 'Descrição' %>

    <div class="row">
      <div class="col-md-6">
        <%= f.input :data %>
      </div>
      <div class="col-md-6">
        <%= currency_group(f, :valor) %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <%= f.association :conta, label_method: :nome %>
      </div>
      <div class="col-md-6">
        <%= f.association :forma, label_method: :nome, label: 'Forma de Pagamento' %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <%= f.association :categoria, collection: Categoria.por_cd(@registro.cd), label_method: :nome %>
      </div>      
      <div class="col-md-6">
        <%= f.association :colecao, collection: Colecao.to_select %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <%= f.input :pago, as: :boolean, label: false %>
      </div>
    </div>

  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
    <%= f.submit "Salvar Registro", class: 'btn btn-primary' %>
  </div>
<% end %>
