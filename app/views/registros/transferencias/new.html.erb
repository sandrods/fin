<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
  <h4 class="modal-title">Transferência</h4>
</div>

<%= simple_form_for @transf, remote: false do |f| %>

  <div class="modal-body">

    <div class="row">
      <div class="col-md-6">
        <%= f.input :conta_origem, collection: Conta.to_select, label: 'Conta Origem' %>
      </div>
      <div class="col-md-6">
        <%= f.input :conta_destino, collection: Conta.to_select, label: 'Conta Destino' %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <%= f.input :data, as: :datetime %>
      </div>
      <div class="col-md-6">
        <%= currency_group(f, :valor) %>
      </div>
    </div>

  </div>

  <div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
    <%= f.submit "Salvar Transferência", class: 'btn btn-primary' %>
  </div>

<% end %>
